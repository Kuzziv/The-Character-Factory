@page
@model TheCharacterFactory.Pages.Power.PowerListPageModel
@{
}


<h4 style="color:red"> List of Power </h4>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Type
            </th>
            <th>
                Unlocked
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.PowerList != null)
        {
            @foreach (var item in Model.PowerList)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        @item.Type
                    </td>    
                    <td>
                        @item.BlocksMagic
                    </td>
                    <td>
                        @item.BlockedEvne
                    </td>
                    <td>
                        @item.RequiredEvne1
                    </td>
                    <td>
                        @item.RequiredEvne2
                    </td>
                    <td>
                        @item.RequiredEvne3
                    </td>
                    <td>
                        @item.RequiredEvne4
                    </td>
                </tr>
            }
        }
    </tbody>
</table>